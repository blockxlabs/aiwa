{
  "version": "0.0.0.1",
  "applications": {
    "gecko": {
      "id": "awai@getaiwa.com",
      "strict_min_version": "42.0"
    }
  },
  "background": {
    "page": "background.html"
  },
  "name": "aiwa",
  "manifest_version": 2,
  "description": "Aiwa is a wallet for AION",
  "browser_action": {
    "default_icon": "img/icon-32.png",
    "default_title": "Aiwa Wallet",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "96": "img/icon-96.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": ["inject.html", "contentScript.js", "/js/contentScript.bundle.js"],
  "permissions": [
    "webNavigation",
    "notifications",
    "contextMenus",
    "management",
    "tabs",
    "storage",
    "activeTab",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://localhost:3000 https://amity-node.theoan.com/ https://mainnet-node.theoan.com/  https://api.coingecko.com/ 'unsafe-eval'; img-src * data:; object-src 'self'"
}
